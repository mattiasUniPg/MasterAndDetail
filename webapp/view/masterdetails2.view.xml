<mvc:View
    controllerName="masterdetails2.controller.masterdetails2"
    displayBlock="true"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:vm="sap.ui.comp.variants"
    xmlns:l="sap.ui.layout"
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <SplitApp
        id="SplitAppDemo"
        initialDetail="detail"
        initialMaster="master"
    >
        <detailPages>
            <!-- PAGINA EDIT -->
            <Page
                title="Dettagli"
                id="VisUtenti"
                backgroundDesign="Solid"
            >
                <Button
                    class="Excel"
                    text="{i18n>EX}"
                    press="onExport"
                    icon="sap-icon://excel-attachment"
                    type="Default"
                />

                <Table
                    id="idSelectTable"
                    inset="false"
                    growing="true"
                    growingThreshold="50"
                    mode="SingleSelectLeft"
                    width="auto"
                    delete="deleteRow"
                >
                    <columns>
                        <Column
                            id="_IDGenColumn9"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text
                                id="_IDGenText9"
                                text="{i18n>Id}"
                            />
                        </Column>
                        <Column
                            id="_IDGenColumn8"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text
                                id="_IDGenText8"
                                text="Nome"
                            />
                        </Column>
                        <Column
                            id="_IDGenColumn7"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text
                                id="_IDGenText7"
                                text="Cognome"
                            />
                        </Column>

                        <Column
                            id="_IDGenColumn6"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text
                                id="_IDGenText6"
                                text="Email"
                            />
                        </Column>
                        <Column
                            id="_IDGenColumn5"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text
                                id="_IDGenText5"
                                text="Telefono"
                            />
                        </Column>
                        <Column
                            id="_IDGenColumn4"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text
                                id="_IDGenText4"
                                text="Paese"
                            />
                        </Column>
                        <Column
                            id="_IDGenColumn3"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text
                                id="_IDGenText3"
                                text="Citta"
                            />
                        </Column>
                        <Column
                            id="_IDGenColumn2"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text
                                id="_IDGenText2"
                                text="Provincia"
                            />
                        </Column>
                        <Column
                            id="_IDGenColumn1"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <Text
                                id="_IDGenText1"
                                text="Indirizzo"
                            />
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem
                            id="ColListItem"
                            vAlign="Middle"
                        >
                            <cells>
                                <ObjectIdentifier
                                    id="Id"
                                    text="{modelSelected>/Id}"
                                />
                                <ObjectIdentifier
                                    id="NomeTab"
                                    text="{modelSelected>/Nome}"
                                />
                                <ObjectIdentifier
                                    id="CognomeTab"
                                    text="{modelSelected>/Cognome}"
                                />
                                <ObjectIdentifier
                                    id="EmailTab"
                                    text="{modelSelected>/Email}"
                                />
                                <ObjectIdentifier
                                    id="TelefonoTab"
                                    text="{modelSelected>/Telefono}"
                                />
                                <ObjectIdentifier
                                    id="PaeseTab"
                                    text="{modelSelected>/Paese}"
                                />
                                <ObjectIdentifier
                                    id="CittaTab"
                                    text="{modelSelected>/Citta}"
                                />
                                <ObjectIdentifier
                                    id="ProvinciaTab"
                                    text="{modelSelected>/Provincia}"
                                />
                                <ObjectIdentifier
                                    id="IndirizzoTab"
                                    text="{modelSelected>/Indirizzo}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                <Bar id="_IDGenBar1">
                    <contentRight>
                        <!-- <Button text="Modifica" type="Emphasized" press="Updating" icon="sap-icon://edit"/> -->
                        <!-- <Button
                            id="_IDAccount"
                            text="Seleziona"
                            press="_sSelected"
                            icon="sap-icon://user-settings"
                            type="Emphasized"
                            class="bview"
                        /> -->
                        <!-- <BusyDialog id="busyDialog" title="Caricamento in corso..." text="Attendere prego" /> -->
                    </contentRight>
                </Bar>
            </Page>

            <!-- PAGINA REGISTRAZIONE -->
            <Page
                id="Registrazione"
                title="Detail Detail"
                backgroundDesign="Solid"
                showNavButton="true"
                navButtonPress="onPressDetailBack"
            >
                <VBox
                    id="_IDGenVBox2"
                    class="sapUiSmallMargin"
                >
                    <f:Form
                        id="FormToolbar"
                        editable="true"
                        ariaLabelledBy="Title1"
                    >
                        <f:layout>
                            <f:ResponsiveGridLayout
                                id="_IDGenResponsiveGridLayout1"
                                labelSpanXL="4"
                                labelSpanL="3"
                                labelSpanM="4"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="0"
                                emptySpanL="4"
                                emptySpanM="0"
                                emptySpanS="0"
                                columnsXL="2"
                                columnsL="1"
                                columnsM="1"
                                singleContainerFullSize="false"
                            />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer
                                id="_IDGenFormContainer1"
                                ariaLabelledBy="Title2"
                            >
                                <f:toolbar>
                                    <Toolbar id="_IDGenToolbar1">
                                        <Title id="Title2" />
                                        <ToolbarSpacer
                                            id="_IDGenToolbarSpacer1"
                                        />
                                    </Toolbar>
                                </f:toolbar>

                                <f:formElements>
                                    <f:FormElement
                                        id="_IDGenFormElement8"
                                        label="Nome"
                                    >
                                        <f:fields>
                                            <Input
                                                placeholder="Nome"
                                                id="Nome"
                                                maxLength="20"
                                                required="true"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement
                                        id="_IDGenFormElement7"
                                        label="Cognome"
                                    >
                                        <f:fields>
                                            <Input
                                                placeholder="Cognome"
                                                id="Cognome"
                                                maxLength="20"
                                                required="true"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement
                                        id="_IDGenFormElement6"
                                        label="Email"
                                    >
                                        <f:fields>
                                            <Input
                                                placeholder="Email"
                                                id="Email"
                                                maxLength="50"
                                                required="false"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement
                                        id="_IDGenFormElement5"
                                        label="Telefono"
                                    >
                                        <f:fields>
                                            <Input
                                                placeholder="Inserire max. 10 numeri"
                                                id="Telefono"
                                                type="Number"
                                                maxLength="10"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement
                                        id="_IDGenFormElement4"
                                        label="Paese"
                                    >
                                        <f:fields>
                                            <Input
                                                placeholder="Paese"
                                                id="Paese"
                                                type="Text"
                                                maxLength="2"
                                                required="false"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement
                                        id="_IDGenFormElement3"
                                        label="Citta"
                                    >
                                        <f:fields>
                                            <Input
                                                placeholder="Citta"
                                                id="Citta"
                                                maxLength="50"
                                                required="false"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement
                                        id="_IDGenFormElement2"
                                        label="Provincia"
                                    >
                                        <f:fields>
                                            <Input
                                                placeholder="Provincia"
                                                id="Provincia"
                                                maxLength="2"
                                                required="false"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement
                                        id="_IDGenFormElement1"
                                        label="Indirizzo"
                                    >
                                        <f:fields>
                                            <Input
                                                placeholder="Indirizzo"
                                                id="Indirizzo"
                                                maxLength="100"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                    <Panel id="_IDGenPanel2">
                        <FlexBox
                            id="_IDGenFlexBox2"
                            height="100px"
                            alignItems="Start"
                            justifyContent="Center"
                        >
                            <Button
                                id="Button1"
                                text="Registra"
                                type="Accept"
                                press="onCreate"
                                class="sapUiTinyMarginBeginEnd"
                                icon="sap-icon://add-employee"
                            />

                            <Button
                                id="Button2"
                                text="Reset"
                                type="Reject"
                                press="oReset"
                                class="sapUiTinyMarginBeginEnd"
                                icon="sap-icon://reset"
                            />

                            <BusyDialog
                                id="busyDialog"
                                title="Caricamento in corso..."
                                text="Attendere prego"
                            />
                        </FlexBox>
                    </Panel>
                </VBox>
            </Page>
            <!-- PAGINA MODIFICA -->
            <Page
                id="Modifica"
                title="Detail 3 Page"
                backgroundDesign="Solid"
                showNavButton="true"
                navButtonPress=".onPressDetailBack"
            >
                <VBox
                    id="_IDGenVBox1"
                    class="sapUiSmallMargin"
                >
                    <f:SimpleForm
                        id="SimpleFormChange354"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        title="Modifica"
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="false"
                    >
                        <Label
                            id="_IDGenLabel8"
                            text="Nome"
                        />
                        <Input
                            id="NomeUpd"
                            value="{modelSelected>/Nome}"
                            type="Text"
                            placeholder="Inserisci Nome..."
                            required="true"
                        />
                        <Label
                            id="_IDGenLabel7"
                            text="Cognome"
                        />
                        <Input
                            id="CognomeUpd"
                            value="{modelSelected>/Cognome}"
                            type="Text"
                            placeholder="Inserisci Cognome..."
                            required="true"
                        />
                        <Label
                            id="_IDGenLabel6"
                            text="Email"
                        />
                        <Input
                            id="EmailUpd"
                            value="{modelSelected>/Email}"
                            type="Email"
                            placeholder="Inserisci Email..."
                        />
                        <Label
                            id="_IDGenLabel5"
                            text="Telefono"
                        />
                        <Input
                            id="TelefonoUpd"
                            value="{modelSelected>/Telefono}"
                            type="Number"
                            placeholder="Inserisci Telefono..."
                            maxLength="10"
                        />
                        <Label
                            id="_IDGenLabel4"
                            text="Paese"
                        />
                        <Input
                            id="PaeseUpd"
                            value="{modelSelected>/Paese}"
                            placeholder="Inserisci Paese..."
                            type="Text"
                        />
                        <Select
                            id="CountryUpd"
                            selectedKey="{modelSelected>/Country}"
                        >
                            <items>
                                <core:Item
                                    id="_IDGenItem3"
                                    text="England"
                                    key="England"
                                />
                                <core:Item
                                    id="_IDGenItem2"
                                    text="Germany"
                                    key="Germany"
                                />
                                <core:Item
                                    id="_IDGenItem1"
                                    text="Italy"
                                    key="Italy"
                                />
                            </items>
                        </Select>
                        <Label
                            id="_IDGenLabel3"
                            text="Citta"
                        />
                        <Input
                            id="CittaUpd"
                            value="{modelSelected>/Citta}"
                            type="Text"
                            placeholder="Inserisci Citta..."
                        />
                        <Label
                            id="_IDGenLabel2"
                            text="Provincia"
                        />
                        <Input
                            id="ProvinciaUpd"
                            value="{modelSelected>/Provincia}"
                            type="Text"
                            placeholder="Inserisci Provincia..."
                        />
                        <Label
                            id="_IDGenLabel1"
                            text="Indirizzo"
                        />
                        <Input
                            id="IndirizzoUpd"
                            value="{modelSelected>/Indirizzo}"
                            type="Text"
                            placeholder="Inserisci Indirizzo..."
                        />
                        <Input
                            id="CapUpd"
                            value="{modelSelected>/CAP}"
                            type="Number"
                            placeholder="Codice Postale"
                        />
                    </f:SimpleForm>

                    <Panel id="_IDGenPanel1">
                        <FlexBox
                            id="_IDGenFlexBox1"
                            height="100px"
                            alignItems="Start"
                            justifyContent="Center"
                        >
                            <Button
                                id="_IDGenButton3"
                                text="Salva"
                                press="Modifica"
                                class="sapUiTinyMarginBeginEnd"
                                type="Emphasized"
                                icon="sap-icon://save"
                            />
                            <!-- <BusyDialog id="busyDialog" title="Salvataggio modifiche in corso..." text="Attendere prego" /> -->
                            <Button
                                id="_IDGenButton2"
                                text="Elimina"
                                type="Reject"
                                press="Cancella"
                                class="sapUiTinyMarginBeginEnd"
                                icon="sap-icon://delete"
                            />

                            <BusyDialog
                                id="busyDialogback"
                                title="Reindirizzamento in corso..."
                                text="Attendere prego"
                            />
                        </FlexBox>
                    </Panel>
                </VBox>
            </Page>
        </detailPages>

        <masterPages>
            <Page
                id="master"
                title="Master 1"
                backgroundDesign="List"
            >
                <List id="_IDGenList2">
                    <StandardListItem
                        id="_IDGenStandardListItem4"
                        title="To Master2"
                        type="Navigation"
                        press=".onPressGoToMaster"
                    />
                </List>

                <SearchField
                    id="_IDGenSearchField2"
                    width="90%"
                    class="sapUiSmallMargin"
                    liveChange="onSearch"
                    placeholder="Cerca"
                    showSearchButton="true"
                />

                <List
                    id="ShortProducts"
                    headerText="Products"
                    items="{modelResult>/}"
                >
                    <items>
                        <StandardListItem
                            id="ShortProductList"
                            title="{modelResult>Nome} {modelResult>Cognome}"
                            type="Navigation"
                            press="onSelectedListItemPress"
                        />
                    </items>
                </List>
            </Page>
            <Page
                id="master2"
                title="Master 2"
                backgroundDesign="List"
                showNavButton="true"
                navButtonPress=".onPressMasterBack"
            >
                <List
                    id="_IDGenList1"
                    itemPress=".onListItemPress"
                >
                    <items>
                        <StandardListItem
                            id="_IDGenStandardListItem1"
                            title="Home"
                            type="Active"
                            custom:to="VisUtenti"
                        />
                        <StandardListItem
                            id="_IDGenStandardListItem2"
                            title="Registrazione"
                            type="Active"
                            custom:to="Registrazione"
                        />
                        <StandardListItem
                            id="_IDGenStandardListItem3"
                            title="Modifica"
                            type="Active"
                            custom:to="Modifica"
                        />
                    </items>
                </List>
            </Page>
        </masterPages>
    </SplitApp>
</mvc:View>
